                                android:textSize="@dimen/_10sdp"
                                android:ellipsize="end"

                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:text="Fun Earn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
