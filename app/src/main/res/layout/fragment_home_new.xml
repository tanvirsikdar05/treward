<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_20sdp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:weightSum="4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:tag="New Quiz"
                            android:id="@+id/buttonPlayOne"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:src="@drawable/new_quiz"/>

                            <TextView
                                android:maxLines="1"
                                android:textSize="@dimen/_10sdp"
                                android:ellipsize="end"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:text="New Quiz"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:text="Play"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_8sdp"
                                android:background="@drawable/play_shape"
                                android:layout_width="60dp"
                                android:layout_height="20dp"/>

                        </LinearLayout>


                        <LinearLayout
                            android:tag="Top Games"
                            android:id="@+id/buttonPlayTwo"
                            android:gravity="center"

                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:src="@drawable/top_game"/>

                            <TextView

                                android:maxLines="1"
                                android:textSize="@dimen/_10sdp"
                                android:ellipsize="end"

                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:text="Top Games"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:text="Play"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_8sdp"
                                android:background="@drawable/play_shape"
                                android:layout_width="60dp"
                                android:layout_height="20dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:tag="Fun Earn"
                            android:id="@+id/buttonPlayThree"
                            android:gravity="center"

                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:src="@drawable/fun_earn"/>

                            <TextView

